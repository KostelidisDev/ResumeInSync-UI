            <span class="d-none d-lg-inline">{{ getLangString "resume.dashboard.downloadResume" }}</span>
          </button>
          <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left">
            <button class="dropdown-item" id="downloadPdf">PDF</button>
            <button class="dropdown-item" id="downloadJson">JSON</button>
            <button class="dropdown-item" id="downloadHtml">HTML</button>
            <button class="dropdown-item" id="getHtmlIFrame">HTML iFrame URL</button>
          </div>
