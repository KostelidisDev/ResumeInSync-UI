<div class="col-xs-12 ">
  <form id="educationForm">
    <div class="form-group">
      <label for="school">{{ getLangString "resume.education.school" }}</label>
      <input type="text" class="form-control" name="school" id="school" aria-describedby="schoolHelp"
        value="{{ school }}" placeholder="{{ getLangString "resume.education.schoolExample" }}">
    </div>
    <div class="form-group">
      <label for="degree">{{ getLangString "resume.education.degree" }}</label>
      <input type="text" class="form-control" name="degree" id="degree" aria-describedby="degreeHelp"
        value="{{ degree }}" placeholder="{{ getLangString "resume.education.degreeExample" }}">
    </div>
    <div class="form-group">
      <label for="field">{{ getLangString "resume.education.field" }}</label>
      <input type="text" class="form-control" name="field" id="field" aria-describedby="fieldHelp" value="{{ field }}"
        placeholder="{{ getLangString "resume.education.fieldExample" }}">
    </div>
    <div class="form-group">
      <label for="startDate">{{ getLangString "resume.education.startDate" }}</label>
      <input type="date" class="form-control" name="startDate" id="startDate" aria-describedby="startDateHelp"
        value="{{ formattedDateRange.startDate }}" placeholder="{{ getLangString "resume.education.startDateExample"
        }}">
    </div>
    <div class="form-group">
      <label for="endDate">{{ getLangString "resume.education.endDate" }}</label>
      <input type="date" class="form-control" name="endDate" id="endDate" aria-describedby="endDateHelp"
        value="{{ formattedDateRange.endDate }}" placeholder="{{ getLangString "resume.education.endDateExample" }}">
    </div>
    <div class="form-group">
      <label for="grade">{{ getLangString "resume.education.grade" }}</label>
      <input type="text" class="form-control" name="grade" id="grade" aria-describedby="gradeHelp" value="{{ grade }}"
        placeholder="{{ getLangString "resume.education.gradeExample" }}">
    </div>
    <div class="form-group">
      <label for="description">{{ getLangString "resume.education.description" }}</label>
      <input type="text" class="form-control" name="description" id="description" aria-describedby="descriptionHelp"
        value="{{ description }}" placeholder="{{ getLangString "resume.education.descriptionExample" }}">
    </div>
    {{#if importSource}}
      <div class="form-group">
        <label>{{ getLangString "resume.importSource" }}</label>
        <div>{{ importSource }}</div>
      </div>
    {{/if}}
  </form>
</div>
